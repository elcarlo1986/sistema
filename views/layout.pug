doctype html
html
  head
      title Sistema Contable
      link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Sistema Contable
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Inicio
            li
              a(href='/asientos/realizados') Asientos Realizados
            li
              a(href='/asientos/agregar') Agregar Asiento
            li
              a(href='/asientos/filtrar') Filtrar Cuentas﻿
          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a(href='/usuarios/logout') Cerrar Sesion
            else
              li
                a(href='/usuarios/registrar') Registrarse
              li
                a(href='/usuarios/login') Iniciar Sesion﻿
            li
              a(href='/acercade') Acerca De﻿
            li
              a(href='/contacto') Contacto
    
    .container
      != messages('mensajes', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      footer
        .navbar.navbar-default.navbar-fixed-bottom
          .container
            p.navbar-text.pull-left Copyright Tortugas Ninjas &copy; 2017
            a.navbar-btn.btn-danger.btn.pull-right(href='http://twitter.com')
              span.glyphicon.glyphicon-star Siguenos en Twitter
    
    
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
